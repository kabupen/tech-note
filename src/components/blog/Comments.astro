---
/**
 * Giscus コメントコンポーネント
 * 注意: data-* の値は giscus.app で生成されたものに置き換えてください。
 */
type Props = {
  /** ページごとの識別子に使う値（タイトル or パスなど） */
  term?: string;
};

const { term } = Astro.props;
const pageTerm = term ?? Astro.url.pathname;
---

<section id="comments" class="mt-12">
  <script
    src="https://giscus.app/client.js"
    data-repo="kabupen/tech-note"
    data-repo-id="R_kgDOLStABQ"
    data-category="General"
    data-category-id="DIC_kwDOLStABc4Cx-K3"
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="bottom"
    data-theme="preferred_color_scheme"
    data-lang="ja"
    crossorigin="anonymous"
    async></script>
  <noscript class="text-sm text-slate-500">
    コメントを見るには JavaScript を有効にしてください。
  </noscript>
</section>
